@{
    ViewBag.Title = "修改考勤数据修正";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using gzsw.controller.CHK.Models
@using gzsw.model
@using gzsw.util
@using gzsw.util.Extensions
@using gzsw.web
@model gzsw.controller.CHK.Models.PersonnelAttendanceViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    

    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <td style="width: 160px;" class="tdLeft">服务厅名称:</td>
            <td>
                @ViewBag.HALL_NAM
                @Html.HiddenFor(m => m.HALL_NO)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">月份:</td>
            <td>
                @ViewBag.STAT_MO.ToString().Insert(4, "年")月
             @Html.HiddenFor(m => m.STAT_MO)
            </td>
        </tr>
        <tr>
            <td style="width: 160px;" class="tdLeft">当月迟到人次:</td>
            <td>

                @Html.TextBoxFor(m => m.COR_LAT_DAY_CNT)
                @Html.ValidationMessageFor(m => m.COR_LAT_DAY_CNT)
            </td>
        </tr>
        <tr>
            <td style="width: 140px;" class="tdLeft">当月早退人次:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_EAR_DAY_CNT)
                @Html.ValidationMessageFor(m => m.COR_EAR_DAY_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">矿工人次:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_ABSENT_DAY_CNT)
                
                @Html.ValidationMessageFor(m => m.COR_ABSENT_DAY_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">全体应上岗人数:</td>
            <td>

                @Html.TextBoxFor(m => m.COR_ATTEND_PER_CNT)
                
                @Html.ValidationMessageFor(m => m.COR_ATTEND_PER_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">当月工作日:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_WORK_DAY_CNT)
                
                @Html.ValidationMessageFor(m => m.COR_WORK_DAY_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft"></td>
            <td></td>
        </tr>
        <tr>
            <td colspan="3" style="text-align: center">
                <input id="btnSubmit" type="submit" class="l-button" value="提交" />
            </td>
        </tr>
    </table>
        
}
@section Head
{
    @Html.JavaScript("lib/datepicker/WdatePicker.js")
    @Html.JavaScript("lib/jquery.validate/jquery.validate.min.js")
    @Html.JavaScript("lib/jquery.validate/jquery.validate.unobtrusive.min.js")
}
