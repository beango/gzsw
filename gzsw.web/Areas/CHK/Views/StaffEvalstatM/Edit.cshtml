@{
    ViewBag.Title = "修改纳税人评价表现修正";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using gzsw.controller.CHK.Models

@using gzsw.util.Extensions
@using gzsw.web
@model StaffEvalstatMModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <td style="width: 160px;" class="tdLeft">员工名称:</td>
            <td>
                @Html.HiddenFor(m => m.STAFF_ID)
                @Html.DisplayFor(m => m.STAFF_NAM)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.STAFF_ID)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">月份:</td>
            <td>
                @Html.HiddenFor(m => m.STAT_MO)
                @Model.STAT_MO.ToYearsMonthString()
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.STAT_MO)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">评价非常满意量:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_VERY_SATISFY_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.COR_VERY_SATISFY_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">评价满意量:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_SATISFY_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.COR_SATISFY_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">评价基本满意量:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_COMMON_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.COR_COMMON_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">评价不满意量:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_UNSATISFY_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.COR_UNSATISFY_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">未评价量:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_NON_EVAL_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.COR_NON_EVAL_CNT)
            </td>
        </tr>
        <tr>
            <td colspan="3" style="text-align: center">
                <input id="btnSubmit" type="submit" class="l-button" value="提交" />
            </td>
        </tr>
    </table>
}
@section Head
{
    @Html.JavaScript("lib/jquery.validate/jquery.validate.min.js")
    @Html.JavaScript("lib/jquery.validate/jquery.validate.unobtrusive.min.js")
}