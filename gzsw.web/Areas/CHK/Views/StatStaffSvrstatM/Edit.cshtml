@{
    ViewBag.Title = "修改业务量数据修正";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using gzsw.controller.CHK.Models
@using gzsw.model
@using gzsw.util
@using gzsw.util.Extensions
@using gzsw.web
@model StaffSvrstatMModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <td style="width: 160px;" class="tdLeft">员工名称:</td>
            <td>
                @Html.HiddenFor(m => m.STAFF_ID)
                @Html.DisplayFor(m => m.STAFF_NAM)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.STAFF_ID)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">月份:</td>
            <td>
                @Html.HiddenFor(m => m.STAT_MO)
                @Model.STAT_MO.ToYearsMonthString()
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.STAT_MO)
            </td>
        </tr>
        <tr>
            <td  class="tdLeft">业务事项:</td>
            <td>
                @Html.HiddenFor(m => m.SERIALID)
                @Html.DisplayFor(m => m.SERIALNAME)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.SERIALID)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">上门业务笔数:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_DOOR_SVR_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.COR_DOOR_SVR_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">其他业务笔数:</td>
            <td>
                @Html.TextBoxFor(m => m.OTHER_SVR_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.OTHER_SVR_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">超时业务笔数:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_OVERTIME_SVR_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.COR_OVERTIME_SVR_CNT)
            </td>
        </tr>
        <tr>
            <td colspan="3" style="text-align: center">
                <input id="btnSubmit" type="submit" class="l-button" value="提交" />
            </td>
        </tr>
    </table>
}
@section Head
{
    @Html.JavaScript("lib/jquery.validate/jquery.validate.min.js")
    @Html.JavaScript("lib/jquery.validate/jquery.validate.unobtrusive.min.js")
}