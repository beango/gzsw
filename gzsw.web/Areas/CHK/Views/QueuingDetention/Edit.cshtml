@{
    ViewBag.Title = "修改业务量数据修正";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using gzsw.controller.CHK.Models
@using gzsw.model
@using gzsw.util
@using gzsw.util.Extensions
@using gzsw.web
@model QueuingDetentionViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <td style="width: 160px;" class="tdLeft">服务厅名称:</td>
            <td>
                @ViewBag.HALL_NAM
                @Html.HiddenFor(m => m.HALL_NO)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">月份:</td>
            <td>
                @ViewBag.STAT_MO.ToString().Insert(4, "年")月
                @*@Html.HiddenFor(m => m.STAT_MO)*@
                <input type="hidden" id="STAT_MO" name="STAT_MO" value="@ViewBag.STAT_MO"/>
            </td>
        </tr>
        <tr>
            <td  class="tdLeft">排队超过45分钟次数:</td>
            <td>
              @Html.TextBoxFor(m => m.COR_OVERTIME_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.COR_OVERTIME_CNT)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">当月有效排队取号总数:</td>
            <td>
                @Html.TextBoxFor(m => m.COR_VALID_QUEUE_CNT)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.COR_VALID_QUEUE_CNT)
            </td>
        </tr>
        <tr>
            <td colspan="3" style="text-align: center">
                <input id="btnSubmit" type="submit" class="l-button" value="提交" />
            </td>
        </tr>
    </table>
}
@section Head
{
    @Html.JavaScript("lib/jquery.validate/jquery.validate.min.js")
    @Html.JavaScript("lib/jquery.validate/jquery.validate.unobtrusive.min.js")
}