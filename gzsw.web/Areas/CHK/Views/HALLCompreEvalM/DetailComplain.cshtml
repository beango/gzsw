@using gzsw.model
@using gzsw.util
@using gzsw.web;
@model PetaPoco.Page<dynamic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- 查询菜单 --> 

<div class="tablePanel">
    <table class="tablelist">
        <thead>
            <tr>
                 
                <th style="width:38px;">序号 </th>  
                     <th>服务厅编码</th>
                <th>服务厅名称</th>
                 <th>
                    纳税人/企业编码
                </th>
                <th>
                    纳税人/企业名称
                </th> 
                <th>
                    投诉问题描述
                </th>
                <th>
                    投诉类型名
                </th>
                <th>
                    投诉时间
                </th>
                <th>
                    投诉状态
                </th>
            </tr>
        </thead>

        @{
            var i = 1;
        }
        @foreach (var item in Model.Items)
        {
            <tr>
              
                <td>
                    @(i++)
                </td>
                <td>@item.HALL_NO</td>
                <td>@item.HALL_NAM</td>
               <td>
                    @item.NSR_SBM
                </td>
                  <td>
                    @item.NSR_NAME
                </td> 
                <td>
                    @item.COMPLAIN_PRO
                </td>
                <td>
                    @item.COMPLAIN_NAM
                </td>
                <td>
                    @item.COMPLAIN_TIME.ToString("yyyy-MM-dd")
                </td>
                <td> 
                    
                    @(EnumHelper.ConvertToE<gzsw.model.ext.WARN_COMPLAIN_DETAIL.DETAIL_STATUS_ENUM>(item.STATE.ToString()))
                </td>
            </tr>
        }
    </table>
    @if (Model.Items.Count < 1)
    {
        <div class="l-panel-notDATA">
            暂无数据
        </div>
    }
    @Html.Pager("pageIndex", Model.ItemsPerPage, Model.TotalItems)
</div>

@section Head{
    @Html.JavaScript("lib/datepicker/WdatePicker.js")
     
}
