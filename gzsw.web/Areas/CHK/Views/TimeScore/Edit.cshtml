@using gzsw.util
@using gzsw.web
@{
    ViewBag.Title = "修改考勤参数";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@model gzsw.controller.CHK.TimeScoreCreateModel

@using (Html.BeginForm())
{
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <table class="formTable" cellpadding="0" cellspacing="0">
            <tr>
                <td class="tdLeft">组织：</td>
                <td colspan="4">
                    @Html.HiddenFor(m => m.ORG_ID)
                    @Html.DisplayFor(m => m.ORG_NAM, new { @class = "text-box", @style = "width:325px;", @readonly = "readonly" })
                    @Html.ValidationMessageFor(m => m.ORG_ID)
                </td>
            </tr>
            <tr>
                <td class="tdLeft">上午上班时间：</td>
                <td>
                    @Html.HiddenFor(m => m.A_BEGIN_TIME)
                    <input type="text" name="A_BEGIN_TIME_SHOW" id="A_BEGIN_TIME_SHOW" value="@OutputHelper.GetTimeChinaString(Model.A_BEGIN_TIME)" dtype="time" style="width:100px;" readonly="readonly" />
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.A_BEGIN_TIME)
                </td>
                <td class="tdLeft">上午下班时间：</td>
                <td>
                    @Html.HiddenFor(m => m.A_END_TIME)
                    <input type="text" name="A_END_TIME_SHOW" id="A_END_TIME_SHOW" value="@OutputHelper.GetTimeChinaString(Model.A_END_TIME)" dtype="time" style="width:100px;" readonly="readonly" />
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.A_END_TIME)
                </td>
            </tr>
            <tr>
                <td class="tdLeft">下午上班时间：</td>
                <td>
                    @Html.HiddenFor(m => m.P_BEGIN_TIME)
                    <input type="text" name="P_BEGIN_TIME_SHOW" id="P_BEGIN_TIME_SHOW" value="@OutputHelper.GetTimeChinaString(Model.P_BEGIN_TIME)" dtype="time" style="width:100px;" readonly="readonly" />

                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.P_BEGIN_TIME)
                </td>
                <td class="tdLeft">下午下班时间：</td>
                <td>
                    @Html.HiddenFor(m => m.P_END_TIME)
                    <input type="text" name="P_END_TIME_SHOW" id="P_END_TIME_SHOW" value="@OutputHelper.GetTimeChinaString(Model.P_END_TIME)" dtype="time" style="width:100px;" readonly="readonly" />
                   
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.P_END_TIME)
                </td>
            </tr>
            <tr>
                <td class="tdLeft">迟到后置分钟：</td>
                <td>
                    @Html.TextBoxFor(m => m.LAT_LAST_MIN, new { @class = "text-box", @style = "width:100px;" })
                  
                </td>
                <td class="tdLeft">
                    @Html.ValidationMessageFor(m => m.LAT_LAST_MIN)
                </td>
                <td class="tdLeft">早退前置分钟：</td>
                <td>
                    @Html.TextBoxFor(m => m.EAR_LAST_MIN, new { @class = "text-box", @style = "width:100px;" })
                   
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.EAR_LAST_MIN)
                </td>
            </tr>
            <tr>
                <td class="tdLeft">早退扣分：</td>
                <td>
                    @Html.TextBoxFor(m => m.EAR_SCORE, new { @class = "text-box", @style = "width:100px;" })
                    
                </td>
                <td class="tdLeft">
                    @Html.ValidationMessageFor(m => m.EAR_SCORE)
                </td>
                <td class="tdLeft">旷工扣分：</td>
                <td>
                    @Html.TextBoxFor(m => m.NEG_SCORE, new { @class = "text-box", @style = "width:100px;" })
                   
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.NEG_SCORE)
                </td>
            </tr>
            <tr>
                <td class="tdLeft">病假扣分：</td>
                <td>
                    @Html.TextBoxFor(m => m.ILL_SCORE, new { @class = "text-box", @style = "width:100px;" })
                   
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.ILL_SCORE)
                </td>
                <td class="tdLeft">事假扣分：</td>
                <td>
                    @Html.TextBoxFor(m => m.ABS_SCORE, new { @class = "text-box", @style = "width:100px;" })
                   
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.ABS_SCORE)
                </td>
            </tr>
            <tr>
                <td class="tdLeft">迟到扣分：</td>
                <td>
                    @Html.TextBoxFor(m => m.LAT_SCORE, new { @class = "text-box", @style = "width:100px;" })
                    
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.LAT_SCORE)
                </td>
                <td class="tdLeft">未签退扣分：</td>
                <td>
                    @Html.TextBoxFor(m => m.NONSIGN_SCORE, new { @class = "text-box", @style = "width:100px;" })
                    
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.NONSIGN_SCORE)
                </td>
            </tr>
            <tr>
                <td class="tdLeft" colspan="6" style="text-align: center;"> 
                
                    <input type="submit" class="l-button" value="提交" />
                </td>
            </tr>
        </table>

}
@section Head{
    @Html.JavaScript("lib/jqueryform/jquery.form.js")
    @Html.JavaScript("lib/jquery.validate/jquery.validate.min.js")
    @Html.JavaScript("lib/jquery.validate/jquery.validate.unobtrusive.min.js")
   
    @Html.JavaScript("lib/jquery.timeselect/jquery.timeselect.js")

    <script lang="javascript">
        $(function () {

            $("input[dType='time']").timeSelect();

        });
    </script>
}
