    <script type="text/javascript">
        function getChecked() {
            var treeObj = $.fn.zTree.getZTreeObj("treeParOrg"),
            nodes = treeObj.getCheckedNodes(true);
            for (var i = 0; i < nodes.length; i++) {
                $('#PAR_ORG_ID').val(nodes[i].id);
                break;
            }
            return true;
        }
    </script>
}
