@using gzsw.util
@using gzsw.web;
@model PetaPoco.Page<dynamic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!-- 查询菜单 -->
<div class="l-panel-search">
    <table class="tabSearchList">
        <tr>
            <td style="width:100px;">服务厅编码：</td>
            <td style="width:170px;"> 
                
                 @Html.DropDownList("ddlORGID", ViewBag.UserORG as SelectList, "--请选择--")

            </td>
            <td>
                <div id="btnSearch"></div>
            </td>
        </tr>
    </table>
</div>
<div id="toptoolbar"></div>

<div class="tablePanel">
    <table class="tablelist" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th style="width:40px;"> <input id="chkAll" name="chkAll" type="checkbox" /></th>
                <th>序号</th>
                <th>
                    服务厅编码
                </th>
                <th>
                    服务厅名称
                </th>
                <th>
                    报警类型
                </th>
                <th>
                    手机号码
                </th>
                <th>
                    用户名称

                </th>
            </tr>
        </thead>
        @{
            var i = 1;
        }
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <input name="cbId" value="@(item.seq)" type='checkbox' />
                </td>
                <td>
                    @(i++)
                </td>
                <td>
                    @item.hall_no
                </td>
                <td>
                    @item.HALL_NAM 
                </td>
                <td> 
                    @(EnumHelper.ConvertToE<gzsw.model.ext.WARN_ALARM_SEND_USER_CON.ALARM_TYP_ENUM>(item.alarm_typ.ToString()))
                </td>
                <td>
                    @item.mob_nbr  
                </td>
                  <td>
                     @item.USER_NAM  
                </td>
            </tr>
        }

    </table>
    @if (Model.Items.Count < 1)
    {
        <div class="l-panel-notDATA">
            暂无数据
        </div>
    }
    @Html.Pager("pageIndex", Model.ItemsPerPage, Model.TotalItems)
</div>

@section Head{
    @Html.JavaScript("lib/utility/ext.js")
    <script lang="javascript">
        $(function () {
            // 注册事件
            var hallno = '@ViewBag.hallno';
            $("#ddlORGID").val(hallno);
            // 查询
            $("#btnSearch").ligerButton(
            {
                text: " 查 询 ",
                click: function () {
                    var url = "?hallno=" + $("#ddlORGID").val();
                    location.href = url.urlstamp();
                },
                icon: "@Html.Url("Content/lib/ligerUI/skins/icons/search.png")"
            });
            // 顶部导航
            var bar = $("#toptoolbar").ligerToolBar();

            bar.addItem(@Html.AuthViewButton("WARN_RELEASE_VIW", Url.Action("Details"),"查看",500,400));
            bar.addItem({ line: true });
            bar.addItem(@Html.AuthAddButton("WARN_RELEASE_ADD", Url.Action("Create"), "新增", 500, 400));
            bar.addItem({ line: true });
            bar.addItem(@Html.AuthDelButton("WARN_RELEASE_DEL", Url.Action("Delete")));
            bar.addItem({ line: true });
        });
    </script>
}
