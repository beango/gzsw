@using gzsw.web;
@model gzsw.model.WARN_INFO_DETAIL
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.WARN_INFO_DETAIL_ID)
    @Html.HiddenFor(model => model.HALL_NO)
    @Html.HiddenFor(model => model.WARN_TYP)
    @Html.HiddenFor(model => model.WARN_LEVEL)
    @Html.HiddenFor(model => model.REAL_VALUE)
    @Html.HiddenFor(model => model.CREATE_DTIME)
    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <td style="width:100px;" class="tdLeft">
                服务厅：
            </td>
            <td>
                @Model.HALL_NAM
            </td>
        </tr>
        <tr>
            <td class="tdLeft">
                预警类型：
            </td>
            <td>
                @Model.WARN_TYP_NAM
            </td>
        </tr>
        <tr>
            <td class="tdLeft">
                预警级别：
            </td>
            <td>
                @Model.WARN_LVL_NAM
            </td>
        </tr>

        <tr>
            <td class="tdLeft">
                实际值：
            </td>
            <td>
                @Model.REAL_VALUE
            </td>
        </tr>
        @if (Model.WARN_TYP == 1)
        {
            <tr>
                <td class="tdLeft">
                    纳税人或识别码：
                </td>
                <td>
                    @Model.NSR_SBM
                </td>
            </tr>
        }

        @if (Model.WARN_TYP == 9)
        {
            <tr>
                <td class="tdLeft">
                    员工编码：
                </td>
                <td>
                    @Model.STAFF_NAM
                </td>
            </tr>
        }
        @if (Model.WARN_TYP == 1)
        {
            <tr>
                <td class="tdLeft">
                    交易业务流水号：
                </td>
                <td>
                    @Model.CHQUEUE_TRANSCODEID
                </td>
            </tr>
        }
        <tr>
            <td class="tdLeft">
                预警原因：
            </td>
            <td>
                @Html.TextAreaFor(model => model.WARN_REASON, new { @style = "width:200px;height:55px;" })
                @Html.ValidationMessageFor(model => model.WARN_REASON)
            </td>
        </tr>
        <tr>
            <td class="tdLeft">
                预警处理：
            </td>
            <td>
                @Html.Hidden("STATE", 2)
                @Html.TextAreaFor(model => model.WARN_METHOD, new { @style = "width:200px;height:55px;" })
                @Html.ValidationMessageFor(model => model.WARN_METHOD)
            </td>
        </tr>
        <tr>
            <td class="tdLeft"> &nbsp;  </td>
            <td>
                <input type="submit" class="l-button" value="提交" />
            </td>
            <td> </td>
        </tr>
    </table>
}