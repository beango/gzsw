@using gzsw.util
@using gzsw.web
@model gzsw.model.WARN_ALARM_INFO_DETAIL
@{
    ViewBag.Title = "修改窗口值班";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        
    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <td style="width:100px;" class="tdLeft">
            员工编码：
            </td>
            <td>
                @Model.STAFF_ID
            </td>
            <td class="tdLeft">
               员工名称：
            </td><td>
            @ViewBag.StaffName 
            </td>
        </tr>
     
        <tr>
            <td class="tdLeft">
               窗口号 ：
            </td><td>
            @Model.COUNTER_ID 
            </td>
            <td class="tdLeft">
                报警类型：
            </td><td> 
                @(EnumHelper.ConvertToE<gzsw.model.ext.WARN_ALARM_INFO_DETAIL.ALARM_TYP_ENUM>(Model.ALARM_TYP.ToString()))
            </td>
        </tr>

        <tr>
            <td class="tdLeft">
                生成时间：
            </td><td colspan="3">
                @Model.CREATE_DTIME.ToString("yyyy-MM-dd HH:mm:ss")

                 </td>
        </tr>

     <tr>
         <td class="tdLeft">
             服务厅编码：
         </td><td>
                  @Model.HALL_NO</td>
            <td class="tdLeft">
                服务厅名称：
            </td><td>
                   @ViewBag.HallName 

                 </td>
        </tr>
        
             <tr>
         <td class="tdLeft">
             报警原因：
         </td><td colspan="3">
    @Html.TextAreaFor(m => m.ALARM_REASON, new { @style = "width: 300px;height:60px;" })
    @Html.ValidationMessageFor(m => m.ALARM_REASON)

</td>
     </tr>
     <tr>
         <td class="tdLeft">
             报警处理：
         </td><td colspan="3">

    @Html.TextAreaFor(m => m.ALARM_METHOD, new { @style = "width: 300px;height:60px;" })
    @Html.ValidationMessageFor(m => m.ALARM_METHOD)

</td>
     </tr>
    </table>  
     @Html.Hidden("ALARM_SEQ", Model.ALARM_SEQ); 
    <div style="text-align: center;margin-top: 20px;">
            <input type="submit" class="l-button" value="提交" />
        </div>
}


@section Head{
    @Html.JavaScript("lib/jqueryform/jquery.form.js")
    @Html.JavaScript("lib/jquery.validate/jquery.validate.min.js")
    @Html.JavaScript("lib/jquery.validate/jquery.validate.unobtrusive.min.js")
    @Html.StyleSheet("lib/ztree/zTreeStyle.css")
    <script type="text/javascript">
        $(function () {
            var state = '@Model.STATE';
            $("#STATE").val(state);
        });

    </script>
}